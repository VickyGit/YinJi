<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <Button
        android:id="@+id/btn_from_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册选择"
        android:background="@drawable/btn_from_album"
        android:layout_margin="20dp"
        android:padding="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_from_photo"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/btn_from_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相机拍摄"
        android:background="@drawable/btn_from_photo"
        android:layout_margin="20dp"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:padding="10dp"
        android:layout_below="@+id/btn_from_photo"
        android:layout_alignRight="@+id/btn_from_photo"
        app:layout_constraintTop_toBottomOf="@+id/btn_from_photo"
        app:layout_constraintRight_toRightOf="@+id/btn_from_photo"
        />

</android.support.constraint.ConstraintLayout>